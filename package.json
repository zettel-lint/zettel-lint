{
  "name": "zettel-lint",
  "version": "0.11.1",
  "description": "Command line zettel linting/indexing",
  "main": "./lib/zl.js",
  "type": "module",
  "bin": {
    "zettel-lint": "./lib/zl.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec tsx src/zl.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "test": "jest",
    "help": "npm run-script zl -- --version && npm run-script zl -- --help",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "zl": "tsx src/zl.ts",
    "postbuild": "copyfiles -u 1 src/**/*.mustache lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zettel-lint/zettel-lint.git"
  },
  "keywords": [
    "zettel",
    "lint",
    "javascript",
    "notes"
  ],
  "author": "Craig Nicol",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zettel-lint/zettel-lint/issues"
  },
  "homepage": "https://github.com/zettel-lint/zettel-lint#readme",
  "dependencies": {
    "@types/jest": "^29.5.11",
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "clear": "^0.1.0",
    "commander": "^11.1.0",
    "copyfiles": "^2.4.1",
    "figlet": "^1.7.0",
    "fs": "0.0.2",
    "glob": "^10.3.10",
    "mustache": "^4.2.0",
    "path": "^0.12.7",
    "simple-markdown": "^0.7.3"
  },
  "devDependencies": {
    "@types/clear": "^0.1.4",
    "@types/figlet": "^1.5.8",
    "@types/glob": "^8.1.0",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-runner-tsc": "^1.6.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
