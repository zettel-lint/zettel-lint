{
  "name": "zettel-lint",
  "version": "0.10.17",
  "description": "Command line zettel linting/indexing",
  "main": "./lib/zl.js",
  "bin": {
    "zettel-lint": "./lib/zl.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec ts-node src/zl.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "test": "jest",
    "help": "npm run-script zl -- --version && npm run-script zl -- --help",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "zl": "ts-node src/zl.ts",
    "postbuild": "copyfiles -u 1 src/**/*.mustache lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zettel-lint/zettel-lint.git"
  },
  "keywords": [
    "zettel",
    "lint",
    "javascript"
  ],
  "author": "Craig Nicol",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zettel-lint/zettel-lint/issues"
  },
  "homepage": "https://github.com/zettel-lint/zettel-lint#readme",
  "dependencies": {
    "@types/jest": "^26.0.24",
    "axios": "^0.21.3",
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "commander": "^5.1.0",
    "copyfiles": "^2.4.1",
    "figlet": "^1.5.2",
    "fs": "0.0.2",
    "glob": "^7.2.0",
    "glob-promise": "^3.4.0",
    "mustache": "^4.2.0",
    "path": "^0.12.7",
    "simple-markdown": "^0.7.3"
  },
  "devDependencies": {
    "@types/clear": "^0.1.0",
    "@types/figlet": "^1.2.0",
    "@types/glob": "^7.1.1",
    "@types/mustache": "^4.1.1",
    "@types/node": "^13.13.5",
    "eslint": "^7.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
