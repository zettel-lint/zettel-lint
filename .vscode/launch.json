{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "PowerShell",
      "request": "launch",
      "name": "index journal",
      "script": "${workspaceRoot}/local-scripts/journal-index.ps1",
      "cwd": "${workspaceRoot}/local-scripts/",
      "preLaunchTask": "npm: create"
    },
    {
      "type": "PowerShell",
      "request": "launch",
      "name": "lint and fix journal notes",
      "script": "${workspaceRoot}/local-scripts/journal-notes.ps1",
      "cwd": "${workspaceRoot}/local-scripts/",
      "preLaunchTask": "npm: create"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/lib/zl.js"
    },
    {
      "command": "npm run-script zl -- index -v -i \"node_modules/**\" -r references.md --show-orphans",
      "name": "Test Index",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "command": "npm run-script zl -- notes -v -i \"node_modules/**\" --verbose --show-orphans",
      "name": "Test Notes",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "command": "npm run-script create",
      "name": "create",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "args": [
        "test",
        "--",
        "--runInBand",
        "--watchAll=false"
      ]
    }
  ]
}